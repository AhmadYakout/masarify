{
  "name": "masarify-auth-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:mock": "cross-env NODE_ENV=development APP_ENV=mock tsx watch src/server.ts",
    "dev:staging": "cross-env NODE_ENV=production APP_ENV=staging tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:staging": "cross-env NODE_ENV=production APP_ENV=staging node dist/server.js",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.14.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.2",
    "typescript": "~5.8.2"
  }
}
